@model AutoDoc.Models.Subject

@{
    ViewBag.Title = "Создание учебной дисциплины для группы " + ViewBag.GroupName;
}

<h2> @ViewBag.Title </h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend> @ViewBag.Title </legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectName)
            @Html.ValidationMessageFor(model => model.SubjectName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ShortName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShortName)
            @Html.ValidationMessageFor(model => model.ShortName)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад", "Index", "Group", new { id = Request.Params.Get("GroupId")}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
